@model IEnumerable<Mass>

@{
    ViewData["Title"] = "Rezerwacja Mszy";
}

<h2>Dostępne Msze</h2>

<!-- Filtracja po dacie -->
<form method="get">
    <label for="filterDate">Filtruj po dacie:</label>
    <input type="date" name="filterDate" value="@Context.Request.Query["filterDate"]" />
    <button type="submit" class="btn btn-secondary">Filtruj</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Data</th>
            <th>Godzina</th>
            <th>Wolne miejsca</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mass in Model)
        {
            <tr>
                <td>@mass.Date.ToShortDateString()</td>
                <td>@mass.Time</td>
                <td>@(mass.MaxIntentions - mass.Intentions.Count)</td>
                <td>
                    @if (mass.Intentions.Count < mass.MaxIntentions)
                    {
                        <a class="btn btn-success" href="@Url.Action("Reserve", "Masses", new { massId = mass.Id })">Zarezerwuj intencję</a>
                    }
                    else
                    {
                        <span class="text-danger">Brak miejsc</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
